{
    "compilerOptions": {
      "rootDir": ".",
      "outDir": "dist",
      "lib": ["es2020", "DOM"],
      "target": "es2020",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "types": ["jest", "node"]
    },
    "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true,
    "fileExtensions": {
      "inputGlob": "{js,jsx,mjs}",
      "outputCheck": ["js", "json", "jsx", "mjs"]
    }
  }
  }

  